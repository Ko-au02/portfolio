<div class="main posts-index">
  <div class="container">
    <div class="index-heading">
      <h1>投稿一覧</h1>
    </div>

    <div class="posts-items">
      <% @posts.each do |post|  %>
        <div class="balloon5">
          <div class="faceicon">
              <img src="<%= "/user_images/#{post.user.image_name}" %>">
              <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
          <div class="chatting">
            <div class="says">
              <%= post.title%><br>
              <%= link_to(post.content, "/posts/#{post.id}") %>
            </div>
          </div>
        </div>
        <% end %>
      </div>

    </div>
  </div>
